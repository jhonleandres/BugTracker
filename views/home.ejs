<html>
    <head>
        <title>BugTracker</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script>
            // navegador + relogio
            document.onreadystatechange = () => {
                if(document.readyState === 'interactive') {
                    document.getElementById('userAgent').value = window.navigator.userAgent
                    document.getElementById('userDate').value = Date()
                    document.getElementById('userSo').value = window.navigator.platform
                    /*
                    console.log('Olá', window.navigator.userAgent)
                    console.log('Olá', window.navigator.platform)
                    console.log('Navegador', window.navigator.appCodeName)
                    console.log('Date', new Date())
                    console.log('Olá', window.navigator)
                    */
                }
            }
        </script>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/">BugTracker</a>
        </nav>
        <div class="container">
            <h1>Ferramenta de Relato de Bugs</h1>
            <p>Preencha todos os dados a seguir</p>
            <form method="post">
                <div class="from-group">
                    <label for="name">Nome:</label>
                    <input type="text" id="name" name="name" class="form-control" />
                </div>
                <div class="from-group">
                    <label for="email">E-mail:</label>
                    <input type="email" id="email" name="email" class="form-control"/>
                </div>
                <div class="from-group">
                <label for="issueType">Classificação:</label>
                <select id="issueType" name="issueType" class="form-control">
                    <option value="">Selecione</option>
                    <option value="CRITICAL">Crítico</option>
                    <option value="BUG">Falha</option>
                    <option value="ENHANCEMENT">Melhoria</option>
                </select>
                </div>
                <div class="from-group">
                    <label for="howToReproduce">Como reproduzir o erro?</label>
                    <textarea id="howToReproduce" name="howToReproduce" class="form-control"></textarea>
                </div>
                <div class="from-group">
                    <label for="expectedOuput">A saída esperada?</label>
                    <textarea id="expectedOuput" name="expectedOuput" class="form-control"></textarea>
                </div>
                <div class="from-group">
                    <label for="receiveOuput">A saída recebida:</label>
                    <textarea id="receiveOuput" name="receiveOuput" class="form-control"></textarea>
                </div>

                <input type="hidden" id="userAgent" name="userAgent" />
                <input type="hidden" id="userDate" name="userDate" />
                <input type="hidden" id="userSo" name="userSo" />


                <button class="btn btn-primary">Enviar Solicitação!</button>
            
            </form>
        </div>
    </body>
</html>